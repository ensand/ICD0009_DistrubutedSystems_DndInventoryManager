@model IEnumerable<Domain.Weapon>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AttackType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WeaponType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WeaponSize)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ToHit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Damage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Range)
